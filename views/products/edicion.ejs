<!DOCTYPE html>
<html>
<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>
            <div class="register-content">
                <h1 class="titulo">
                    Editar juego
                    <%=console.log("------------------------------------------------------------------------------------------------------------------------------------------------------------")%>
                        <%=console.log(product)%>
                </h1>
                <form id="form-create" method="post" action="../products/<%=product.id%>?_method=PUT"
                    enctype="multipart/form-data">
                    <div class="fields">
                        <div class="field">
                            <label for="name">Nombre:</label>
                            <input type="text" id="name" name="name" placeholder="Nombre del juego"
                                value="<%= locals.old && old.name ? old.name : product.Name %>">
                            <% if (locals.errors && errors.name) { %>
                                <p class="errors">
                                    <%= errors.name.msg %>
                                </p>
                                <% } %>
                        </div>

                        <div class="field">
                            <label for="precio">Precio:</label>
                            <input type="number" id="precio" name="price" placeholder="Precio"
                                value="<%= locals.old && old.price ? old.price : product.Price %>">
                            <% if (locals.errors && errors.price) { %>
                                <p class="errors">
                                    <%= errors.price.msg %>
                                </p>
                                <% } %>
                        </div>

                        <div class="field">
                            <label for="date">Fecha de creación:</label>
                            <input type="date" id="date" name="date" placeholder="Fecha de creacion" min="1900-01-01"
                                max="<%= new Date(new Date().getFullYear(), 31, 12) %>"
                                value="<%= locals.old && old.date ? old.date : product.ReleaseDate.toISOString().split('T')[0] %>">
                            <% if (locals.errors && errors.date) { %>
                                <p class="errors">
                                    <%= errors.date.msg %>
                                </p>
                                <% } %>
                        </div>

                        <div class="field">
                            <label for="videoUrl">Enlace del video:</label>
                            <input type="text" id="videoUrl" name="videoUrl" placeholder="Url de video"
                                value="<%= locals.old && old.videoUrl ? old.videoUrl : product.VideoUrl %>">
                            <% if (locals.errors && errors.videoUrl) { %>
                                <p class="errors">
                                    <%= errors.videoUrl.msg %>
                                </p>
                                <% } %>
                        </div>

                        <div class="field">
                            <label for="desarrolladora">Desarrolladora:</label>
                            <select name="desarrolladora" id="desarrolladora">
                                <% for(let desarrolladora of locals.desarrolladoras){ %>
                                    <option value="<%= desarrolladora.id %>" <%=(locals.old && locals.old.desarrolladora
                                        && locals.old.desarrolladora==desarrolladora.id) ||
                                        product.developerId==desarrolladora.id ? "selected" : '' %> ><%=
                                            desarrolladora.Name %>
                                    </option>
                                    <% } %>
                            </select>
                            <% if (locals.errors && errors.desarrolladora) { %>
                                <p class="errors">
                                    <%= errors.desarrolladora.msg %>
                                </p>
                                <% } %>
                        </div>

                        <div class="field">
                            <label for="productora">Productora:</label>
                            <select name="productora" id="productora">
                                <% for(let productora of locals.productoras){ %>
                                    <option value="<%= productora.id %>" <%=(locals.old && locals.old.productora &&
                                        locals.old.productora==productora.id) || product.producerId==productora.id
                                        ? "selected" : '' %>><%= productora.Name %>
                                    </option>
                                    <% } %>
                            </select>
                            <% if (locals.errors && errors.productora) { %>
                                <p class="errors">
                                    <%= errors.productora.msg %>
                                </p>
                                <% } %>
                        </div>

                        <div class="field">
                            <label for="juagdores">Numero de jugadores:</label>
                            <input type="number" id="juagdores" name="juagdores" placeholder="Numero de juagdores"
                                value="<%= locals.old && old.juagdores ? old.juagdores : product.PlayersQuantity %>">
                            <% if (locals.errors && errors.juagdores) { %>
                                <p class="errors">
                                    <%= errors.juagdores.msg %>
                                </p>
                                <% } %>
                        </div>

                        <div class="field">
                            <label for="idioma">Idioma:</label>
                            <select name="idioma" id="idioma">
                                <% for(let idioma of locals.idiomas){ %>
                                    <option value="<%= idioma.id %>" <%=(locals.old && locals.old.idioma &&
                                        locals.old.idioma==idioma.id) || product.languageId==idioma.id ? "selected" : ''
                                        %>><%= idioma.Name %>
                                    </option>
                                    <% } %>
                            </select>
                            <% if (locals.errors && errors.idioma) { %>
                                <p class="errors">
                                    <%= errors.idioma.msg %>
                                </p>
                                <% } %>
                        </div>

                        <div class="field">
                            <label for="discount">Descuento:</label>
                            <input type="number" id="discount" name="discount" placeholder="Descuento"
                                value="<%= locals.old && old.discount ? old.discount : product.Discount %>">
                            <% if (locals.errors && errors.discount) { %>
                                <p class="errors">
                                    <%= errors.discount.msg %>
                                </p>
                                <% } %>
                        </div>

                        <div class="field">
                            <label for="category">Categoria:</label>
                            <select name="category" id="category">
                                <% for(let category of locals.categories){ %>
                                    <option value="<%= category.id %>" <%=(locals.old && locals.old.category &&
                                        locals.old.category==category.id) || product.languageId==category.id
                                        ? "selected" : '' %>><%= category.Name %>
                                    </option>
                                    <% } %>
                            </select>
                            <% if (locals.errors && errors.category) { %>
                                <p class="errors">
                                    <%= errors.category.msg %>
                                </p>
                                <% } %>
                        </div>

                        <div class="field-row">
                            <label>Producto destacado:</label>
                            <input type="checkbox" id="sugerido" name="sugerido" value="sugerido" <%=(locals.old &&
                                locals.old.sugerido) || product.IsSuggested ? "cheked" : '' %>>
                        </div>
                    </div>

                    <div class="fields">
                        <div class="field-area">
                            <label for="description">Descripción:</label>
                            <textarea id="description" name="descripcion"
                                placeholder="Descripción..."><%= locals.old && old.descripcion ? old.descripcion : product.Description %></textarea>
                            <% if (locals.errors && errors.descripcion) { %>
                                <p class="errors">
                                    <%= errors.descripcion.msg %>
                                </p>
                                <% } %>
                                    <%=console.log(product.Description)%>

                        </div>
                    </div>

                    <div class="fields">
                        <div class="field-image">
                            <label for="caratula">Portada:</label>
                            <div class="image-preview">
                                <input type="file" id="caratula" name="caratula" accept="image/*">
                                <div class="select-image" id="imageSelect">
                                    <i class="far fa-image"></i>
                                </div>
                                <img src="<%=product.CoverageUrl%>" id="imgPreview">
                            </div>
                        </div>
                        <div class="field-image">
                            <label for="gallery">Galeria:</label>

                            <div class="image-preview">
                                <input type="file" id="gallery" name="gallery" accept="image/*" multiple>
                                <div class="select-image" id="gallerySelect">
                                    <i class="fas fa-images"></i>
                                </div>
                                <div id="galleryDetails" class="galleryDetails">
                                    <ul id="galleryList">
                                        <% for(let preview of product.GalleryImages){ %>
                                            <li>
                                                <%= preview.ImageUrl.split('/').pop() %>
                                            </li>
                                            <% } %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="register-button">
                        <button class="btn-submit" id="register-button" type="submit">Editar juego</button>
                    </div>
                </form>
            </div>
            <script src="../js/edit_validate.js"></script>
            <%- include('../partials/contacto') %>
                <%- include('../partials/footer') %>
    </body>

</html>